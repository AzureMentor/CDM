{
    "$schema": "../schema.cdm.json",
    "schemaVersion": "0.7.0",
    "imports": [
        {
            "uri": "/foundations.cdm.json"
        },
        {
            "uri": "BusinessDocument.cdm.json"
        },
        {
            "uri": "Email.cdm.json"
        }
    ],
    "definitions": [
        {
            "entityName": "HumanResources",
            "extendsEntity": {
                "entityReference": "BusinessDocument",
                "appliedTraits": [
                    {
                        "traitReference": "is.classified",
                        "arguments": [
                            "HBI"
                        ]
                    }
                ]
            },
            "hasAttributes": [
                {
                    "name": "regardingPerson",
                    "relationship": "hasA",
                    "dataType": "email"
                },
                {
                    "name": "openingEmail",
                    "entity": "Email",
                    "relationship": {
                        "relationshipReference": "hasFlexibleRelationshipWithEntity",
                        "appliedTraits": [
                            {
                                "traitReference": "does.disambiguateNames",
                                "arguments": [
                                    "opening_{n}"
                                ]
                            }
                        ]
                    }
                },
                {
                    "name": "inResponseTo",
                    "relationship": {
                        "relationshipReference": "hasFlexibleRelationshipWithEntity",
                        "appliedTraits": [
                            {
                                "traitReference": "does.imposeDirectives",
                                "arguments": [
                                    "referenceOnly"
                                ]
                            },
                            {
                                "traitReference": "does.referenceEntityVia",
                                "arguments": [
                                    {
                                        "name": "foreignKeyAttribute",
                                        "value": {
                                            "name": "inRsponceToCommId",
                                            "relationship": "hasA",
                                            "dataType": "integer"
                                        }
                                    }
                                ]

                            }
                        ]
                    },
                    "entity": {
                        "entityReference": "Email",
                        "appliedTraits": [
                            {
                                "traitReference": "is.identifiedBy",
                                "arguments": [
                                    "Email/(resolvedAttributes)/commId"
                                ]
                            }
                        ]
                    }
                }
            ]
        }
    ]
}